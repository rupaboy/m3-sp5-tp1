<!-- Contenedor principal del body -->
<form
    method="POST"
    action="/api/countries/set/<%= country._id %>?_method=PUT"
    class="flex flex-col min-h-screen bg-zinc-900 py-8 px-5 justify-center">

    <section class="flex-grow">
        <div class="flex justify-end mb-4 leading-6 gap-4">
            <a><button type="submit" class="cursor-pointer rounded-lg w-14 h-14 bg-zinc-800 hover:bg-zinc-700 border border-zinc-700 hover:border-zinc-600 text-[2em] text-center text-stone-300 hover:text-stone-100">
                ⮠
                <p class="text-sm">submit</p></button></a>
            <a><button type="reset" class="cursor-pointer rounded-lg w-14 h-14 bg-zinc-800 hover:bg-zinc-700 border border-zinc-700 hover:border-zinc-600 text-[2em] text-center text-stone-300 hover:text-stone-100">
                ↺
                <p class="text-sm">reset</p></button></a>
            <a class="pt-1 cursor-pointer rounded-lg w-14 h-14 bg-zinc-800 hover:bg-zinc-700 border border-zinc-700 hover:border-zinc-600 text-[2em] text-center text-stone-300 hover:text-stone-100"
                href="/api/countries">
                ↶
                <p class="text-sm">volver</p></a>
        </div>
        <div class="pt-7 md:w-180 grid md:grid-cols-2 sm:grid-cols-1 text-zinc-100 gap-3 items-center py-3 px-[5vw] border border-zinc-700 bg-zinc-800 rounded-lg">
        
                <section class="flex">
                    <img
                    class="mr-4 ml-auto rounded h-7 w-10 object-cover opacity-80"
                    src="<%= country.flags.svg %>">
                    </img>
                    <label for="countryFlag" class="text-zinc-300 text-center">* Bandera (url externa):&nbsp;</label>
                </section>
                <input name="countryFlag" type="url" value="<%= country.flags.svg %>" id="countryFlag" class="border-b"></input>
                <label for="countryName" class="text-zinc-300 ml-auto">Nombre:&nbsp;</label>
                <input name="countryName" value="<%= country.name.nativeName.spa.common %>" required type="text" maxlength="40" minlength="3" id="countryName" class="border-b leading-6 text-xl uppercase"></input>
        
                <label for="countryCapitals" class="text-zinc-300 ml-auto">Capitales (A, B,...):&nbsp;</label>
                <input name="countryCapitals" value="<%= country.capital %>" required type="text" maxlength="40" minlength="3" id="countryCapitals" class="border-b"></input>
        
                <label for="countryContinents" class="ml-auto text-zinc-300">Continentes (A, B,...):&nbsp;</label>
                <input name="countryContinents" value="<%= country.continents %>" required type="text" maxlength="40" minlength="3" id="countryContinents" class="border-b"></input>
        
                <label for="countryRegion" class="ml-auto text-zinc-300">* Region:&nbsp;</label>
                <input name="countryRegion" value="<%= country.region %>" type="text" maxlength="40" minlength="3" id="countryRegion" class="border-b"></input>
        
                <label for="countrySubRegion" class="ml-auto text-zinc-300">* Sub-Region:&nbsp;</label>
                <input name="countrySubRegion" value="<%= country.subregion %>" type="text" maxlength="40" minlength="3" id="countrySubRegion" class="border-b"></input>
                <label for="countryBorders" class="ml-auto text-zinc-300">* Límites (A, B,...):&nbsp;</label>
                <input name="countryBorders" value="<%= country.borders %>" type="text" maxlength="40" minlength="3" id="countryBorders" class="border-b"></input>
        
                <label for="countryLatLong" class="ml-auto text-zinc-300">Lat(-90/90), Long(-180/180):&nbsp;</label>
                <input name="countryLatLong" value="<%= country.latlng %>" required type="string" minlength="3" maxlength="22" id="countryLatLong" class="border-b"></input>
        
                <label for="countryArea" class="ml-auto text-zinc-300">Area de extensión (km<sup>2</sup>):&nbsp;</label>
                <input name="countryArea" value="<%= country.area %>" required type="number" id="countryArea" min="0.1" step="0.1" max="25000000" class="border-b"></input>
        
                <label for="countryPopulation" class="ml-auto text-zinc-300">Población:&nbsp;</label>
                <input name="countryPopulation" value="<%= country.population %>" required type="number" min="0" max="5000000000" id="countryPopulation" class="border-b"></input>
        
                <label for="countryLanguages" class="ml-auto text-zinc-300">Idiomas (A, B,...):&nbsp;</label>
                <input name="countryLanguages" value="<%= Object.keys(country.languages) %>" required type="text" maxlength="40" minlength="3" id="countryLanguages" class="border-b"></input>
        
                <label for="countryCurrencies" class="ml-auto text-zinc-300">Monedas (A, B,...):&nbsp;</label>
                <input name="countryCurrencies" value="<%= Object.keys(country.currencies) %>" required type="text" maxlength="40" minlength="3" id="countryCurrencies" class="border-b"></input>
        
                <label for="countryGini" class="ml-auto text-zinc-300">Índice Gini:&nbsp;</label>
                <section class="grid grid-cols-2">
                    <input name="countryGiniYearLatest" value="<%= country.gini && Object.keys(country.gini) ? Object.keys(country.gini)[Object.keys(country.gini).length - 1] : undefined %>" type="number" min="1900" max="2200" id="countryGini" class="border-b"></input>
                    <input name="countryGiniValueLatest" value="<%= country.gini && Object.values(country.gini) ? Object.values(country.gini) : undefined %>" type="number" min="0" max="100" step="0.01" id="countryGini" class="border-b"></input>
                </section>
                <label for="countryTimezones" class="ml-auto text-zinc-300">Zona horaria:&nbsp;</label>
        
                <select required name="countryTimezones" id="countryTimezones">
        
                    <option value="UTC-12:00" <%= country.timezones[0].includes("-12:") ? "selected" : "" %>>Baker Island (UTC-12:00)</option>
                    <option value="UTC-11:00" <%= country.timezones[0].includes("-11:") ? "selected" : "" %>>Pago Pago (UTC-11:00)</option>
                    <option value="UTC-10:00" <%= country.timezones[0].includes("-10:") ? "selected" : "" %>>Honolulu (UTC-10:00)</option>
                    <option value="UTC-09:00" <%= country.timezones[0].includes("-09:") ? "selected" : "" %>>Anchorage (UTC-9:00)</option>
                    <option value="UTC-08:00" <%= country.timezones[0].includes("-08:") ? "selected" : "" %>>Los Angeles (UTC-8:00)</option>
                    <option value="UTC-07:00" <%= country.timezones[0].includes("-07:") ? "selected" : "" %>>Denver (UTC-7:00)</option>
                    <option value="UTC-06:00" <%= country.timezones[0].includes("-06:") ? "selected" : "" %>>Mexico City (UTC-6:00)</option>
                    <option value="UTC-05:00" <%= country.timezones[0].includes("-05:") ? "selected" : "" %>>Bogotá (UTC-5:00)</option>
                    <option value="UTC-04:00" <%= country.timezones[0].includes("-04:") ? "selected" : "" %>>Caracas (UTC-4:00)</option>
                    <option value="UTC-03:00" <%= country.timezones[0].includes("-03:") ? "selected" : "" %>>Buenos Aires (UTC-3:00)</option>
                    <option value="UTC-02:00" <%= country.timezones[0].includes("-02:") ? "selected" : "" %>>South Georgia (UTC-2:00)</option>
                    <option value="UTC-01:00" <%= country.timezones[0].includes("-01:") ? "selected" : "" %>>Azores (UTC-1:00)</option>
                    <option value="UTC+00:00" <%= country.timezones[0].includes("+00:") ? "selected" : "" %>>Londres (UTC+0:00)</option>
                    <option value="UTC+01:00" <%= country.timezones[0].includes("+01:") ? "selected" : "" %>>Madrid (UTC+1:00)</option>
                    <option value="UTC+02:00" <%= country.timezones[0].includes("+02:") ? "selected" : "" %>>El Cairo (UTC+2:00)</option>
                    <option value="UTC+03:00" <%= country.timezones[0].includes("+03:") ? "selected" : "" %>>Moscú (UTC+3:00)</option>
                    <option value="UTC+04:00" <%= country.timezones[0].includes("+04:") ? "selected" : "" %>>Dubai (UTC+4:00)</option>
                    <option value="UTC+05:00" <%= country.timezones[0].includes("+05:") ? "selected" : "" %>>Karachi (UTC+5:00)</option>
                    <option value="UTC+06:00" <%= country.timezones[0].includes("+06:") ? "selected" : "" %>>Dhaka (UTC+6:00)</option>
                    <option value="UTC+07:00" <%= country.timezones[0].includes("+07:") ? "selected" : "" %>>Bangkok (UTC+7:00)</option>
                    <option value="UTC+08:00" <%= country.timezones[0].includes("+08:") ? "selected" : "" %>>Pekín (UTC+8:00)</option>
                    <option value="UTC+09:00" <%= country.timezones[0].includes("+09:") ? "selected" : "" %>>Tokio (UTC+9:00)</option>
                    <option value="UTC+10:00" <%= country.timezones[0].includes("+10:") ? "selected" : "" %>>Sídney (UTC+10:00)</option>
                    <option value="UTC+11:00" <%= country.timezones[0].includes("+11:") ? "selected" : "" %>>Islas Salomón (UTC+11:00)</option>
                    <option value="UTC+12:00" <%= country.timezones[0].includes("+12:") ? "selected" : "" %>>Fiyi (UTC+12:00)</option>
                    <option value="UTC+13:00" <%= country.timezones[0].includes("+13:") ? "selected" : "" %>>Samoa (UTC+13:00)</option>
                    <option value="UTC+14:00" <%= country.timezones[0].includes("+14:") ? "selected" : "" %>>Kiritimati (UTC+14:00)</option>
                  </select>
        
                <p class="mt-4 col-span-2 text-sm mx-auto">* <em>Campos opcionales</em>.</p>
        </div>
    </section>
</form>

  